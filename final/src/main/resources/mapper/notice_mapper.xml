<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="co.team.apt.notice.mapper.NoticeMapper">
	<select id="noticeList" resultType="board" parameterType="board">
		select *
		from board
		where type=#{type}
	</select>
	
	<!-- <select id="noticeOne" resultType="board" parameterType="board">
		select *
		from board
		where defno=#{defno}
	</select> -->
	
	<insert id="noticeInsert" parameterType="board">
		insert into board(defno,
					title,
					content,
					deffile,
					defdate,
					writer,
					type)
		values(def_seq.nextval,
				#{title},
				#{content},
				#{deffile},
				sysdate,
				#{writer},
				#{type})
	</insert>
	
	<update id="noticeUpdate" parameterType="board">
		update board
		set title=#{title},
			content=#{content},
			deffile=#{deffile},
			defdate=sysdate
		where defno = #{defno}
	</update>

	<delete id="noticeDelete" parameterType="board">
		delete from board
		where defno = #{defno}
	</delete>
</mapper>
